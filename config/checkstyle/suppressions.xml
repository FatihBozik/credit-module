<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <!-- Suppress MagicNumber checks in all unit tests -->
    <suppress checks="MagicNumber" files="[\\/]test[\\/].*[\\/]"/>

    <!-- Suppress VisibilityModifier, AbbreviationAsWordInName, and MemberName checks only for Roles.java -->
    <suppress checks="VisibilityModifier" files="Roles.java"/>
    <suppress checks="AbbreviationAsWordInName" files="Roles.java"/>
    <suppress checks="MemberName" files="Roles.java"/>
</suppressions>
